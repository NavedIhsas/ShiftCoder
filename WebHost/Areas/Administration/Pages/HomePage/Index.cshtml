@page
@using _0_Framework.Application
@using _0_FrameWork.Application
@model WebHost.Areas.Administration.Pages.HomePage.IndexModel
@{
    ViewData["Title"] = "مدیریت صفحه اصلی";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="page-header">@ViewData["Title"]</h1>
        </div>
        <div dir="ltr" class="col-lg-6 mr-3">
            <h1 class="page-header">
                <a Permission="@Permission.CreatePhotoHomePage" class="btn btn-success btn-lg" asp-page="Index" asp-page-handler="Create">تغییر عکس صفحه اصلی</a>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست  
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <hr />
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending"> # </th>

                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending"
                                            aria-sort="ascending">تصویر </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">رنگ دکمه ها</th>

                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">تاریخ تغییر</th>

                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var photo in Model.List)

                                    {
                                        <tr class="gradeU odd">
                                            <td>@photo.Id</td>
                                            <td>
                                                <img src="/FileUploader/@photo.PictureStringFormat" style="max-width: 100px" alt="" />
                                            </td>
                                            <td>@photo.ButtonsColor</td>
                                            <td>
                                               @photo.CreationDate.ToFarsi()
                                            </td>
                                            <td class="center ">
                                                <a Permission="@Permission.ChangePhotoHomePage" asp-page="Index" asp-page-handler="Edit" asp-route-id="@photo.Id" class="btn btn-warning fa fa-edit text-center">ویرایش</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>