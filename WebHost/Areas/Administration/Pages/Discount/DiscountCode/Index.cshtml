@page
@using _0_Framework.Application
@using _0_FrameWork.Application
@model WebHost.Areas.Administration.Pages.Discount.DiscountCode.IndexModel
@{
    ViewData["Title"] = "تخفیف بر اساس کد اختصاصی";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="page-header">تخفیفات بر اساس کد اختصاصی</h1>
        </div>
        <div dir="ltr" class="col-lg-6 mr-3">
            <h1 permission="@Permission.CreateDiscountCode" class="page-header">
                <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">افزودن تخفیف جدید</a>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row col col-md-12">
                                <label style="margin-right: 30px"> <strong>جستجو...</strong></label>
                                <form method="get">

                                    <div class=" col-md-5">
                                        <input asp-for="SearchModel.DiscountCode" name="discountCode" type="text" class="form-control " placeholder="کد تخفیف..." />
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-info">جستجو</button>
                                        <a class="btn btn-success" asp-page="./Index">مشاهده همه</a>
                                    </div>
                                </form>
                            </div>

                            <hr />
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 50px;"> # </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>درصد تخفیف</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>کد تخفیف</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>تاریخ شروع</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>تاریخ اتمام</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>قابل استفاده برای</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>علت تخفیف</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>وضعیت</strong> </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 242px;">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model.List)
                                    {
                                        <tr class="gradeU odd">
                                            <td class="">@item.Id</td>
                                            <td class="sorting_1">@item.DiscountRate درصد</td>
                                            <td class="sorting_1">@item.DiscountCode</td>
                                            <td class="sorting_1">@item.StartDate.ToFarsi()</td>
                                            <td class="sorting_1">@item.EndDate.ToFarsi()</td>
                                            <td class="sorting_1">@item.UseableCount نفر</td>
                                            <td class="sorting_1">@item.Reason</td>
                                            <td class="sorting_1">
                                                @if (item.EndDate < DateTime.Now)
                                                {
                                                    <span class="text-danger">منقضی شده</span>
                                                }
                                                else if (item.UseableCount == 0)
                                                {
                                                    <span class="text-danger">به اتمام رسیده</span>

                                                }
                                                else
                                                {
                                                    <span class="text-success">فعال</span>
                                                }
                                               
                                            </td>

                                            <td class="center ">
                                                <a permission="@Permission.EditDiscountCode" class="btn btn-warning text-center" href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">ویرایش</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>