@model ColleagueDiscountManagementApplication.Contract.ColleagueDiscount.EditColleagueDiscountViewModel
@{
    ViewData["Title"] = "ویرایش تخفیف";
}

<div class="container">
    <partial name="Shared/_Create_View_Header"/>

    <form asp-page="./Index" asp-page-handler="Edit"
          method="post"
          data-ajax="true"
          data-action="Refresh"
          enctype="multipart/form-data">
        <div class="modal-body">
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CourseId" class="control-label">انتخاب دوره...<span class="text-danger">*</span></label>
                        <Select asp-for="CourseId" asp-Items="@(new SelectList(Model.SelectList, "Id", "Name"));" type="file" class="form-control">
                            <option value="0">--انتخاب کنید--</option>
                        </Select>
                        <span class="text-danger" asp-validation-for="CourseId"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DiscountRate" class="control-label">درصد تخفیف<span class="text-danger">*</span></label>
                        <input type="number" asp-for="DiscountRate" class="form-control" accept="image/*">
                        <span class="text-danger" asp-validation-for="DiscountRate"></span>
                    </div>
                </div>
            </div>

        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
    </form>
</div>