@page
@model WebHost.Areas.Administration.Pages.Courses.CourseSuitable.IndexModel
@{
    ViewData["Title"] = $" مدیریت نمایش دوره در Single page ";

}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="page-header">این دوره مناسب چی افرادی است؟</h1>
        </div>
        <div dir="ltr" class="col-lg-6 mr-3">
            <h1 class="page-header">
                <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">افزودن فیلد جدید</a>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                   لیست
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <hr />
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 50px;"> # </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>عنوان</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>دوره</strong> </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 242px;">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody >
                                    @foreach (var item in Model.List)
                                    {
                                        <tr class="gradeU odd">
                                            <td class="">@item.Id</td>
                                            <td class="sorting_1">@item.Title</td>
                                            <td class="sorting_1">@item.CourseName</td>
                                           
                                            <td class="center ">
                                                <a class="btn btn-warning text-center" href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">ویرایش</a>
                                                
                                                @if (!item.IsRemove)
                                                {
                                                    <a asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-remove-format">حذف</i></a>
                                                }
                                                else
                                                {
                                                    <a asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-check">لغو حذف</i></a>

                                                }
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

