@page
@model WebHost.Areas.Administration.Pages.Courses.CourseEpisode.IndexModel
@{
    ViewData["Title"] = $"فایل های دوره ها";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="page-header">فایل های دوره ها</h1>
        </div>
        <div dir="ltr" class="col-lg-6 mr-3">
            <h1 class="page-header">
                <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">افزودن فایل جدید</a>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست فایل ها( @Model.List.Count)
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row col col-md-12">
                                <label style="margin-right: 30px"> <strong>جستجو...</strong></label>
                                <form method="get">

                                    <div class=" col-md-4">
                                        <input asp-for="SearchModel.Title" type="text" class="form-control" placeholder="نام بخش..." />
                                    </div>

                                    <div class=" col-md-4">
                                        <select asp-for="SearchModel.CourseId" asp-items="@(Model.CourseSelectList)" type="text" class="form-control">
                                            <option value="0" selected> انتخاب دوره...</option>
                                        </select>
                                    </div>

                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-info">جستجو</button>
                                        <a class="btn btn-success" asp-page="./Index">مشاهده همه</a>
                                    </div>
                                </form>
                            </div>
                            
                            <hr />
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row" class="text-center">
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 50px;"> # </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>عنوان</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>دوره</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>رایگان؟</strong> </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 244px;" aria-sort="ascending"><strong>زمان</strong> </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 242px;">عملیات</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model.List)
                                    {
                                        <tr class="gradeU odd">
                                            <td class="">@item.Id</td>
                                            <td class="sorting_1">@item.Title</td>
                                            <td class="sorting_1">@item.CourseName</td>
                                            <td class="sorting_1">
                                                @if (item.IsFree)
                                                {
                                                    <span class="text-success"><i class="fa fa-check fa-1x"></i></span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger"><i class="fa fa-remove-format fa-1x"></i></span>

                                                }
                                            </td>
                                            
                                            <td>@item.Time</td>
                                            <td class="center ">
                                                <a class="btn btn-warning text-center" href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">ویرایش</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

