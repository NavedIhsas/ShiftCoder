@page
@using _0_FrameWork.Application
@model WebHost.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
    Layout = "Shared/_AccountLayout";
}
<br />
<div class="row justify-content-center">
    <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">باز یابی کلمه عبور</h2>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
            <h3 class="mb-4 text-center">برای بازیابی کلمه عبور ایمیل خود را وارد کنید.</h3>

            <form method="post" class="signin-form">
                @if (ViewData["Message"] != null)
                {
                    <div class="alert alert-warning text-center">
                        <span>با یاین ایمیل هیچ کاربری ثبت نام نکرده است</span>
                    </div>
                }

                @if (ViewData["Success"] != null)
                {
                    <div class="alert alert-success text-center">
                        <span>
                            ایمیل بازیابی کلمه عبور به ایمیل شما ارسال شد، لطفا جهت ادامه فرایند از طریق ایمیل خود اقدام بفرمائید
                        </span>
                    </div>
                }

                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="ایمیل خود را وارد کنید" required oninvalid="this.setCustomValidity('@(Validate.Required)')"
                           oninput="setCustomValidity('')">
                </div>

                <div class="form-group">
                    <input type="submit" class="form-control btn btn-primary submit px-3" value="ورود">
                </div>

            </form>

            <p class="w-100 text-center">&mdash; <a asp-page="Login" class="text-center "> ورود به سایت</a> &mdash;</p>
            <p class="w-100 text-center">&mdash; <a asp-page="Index" class="text-center ">صفحه اصلی</a> &mdash;</p>
         
        </div>
    </div>
</div>