@model ShiftCoderQuery.Contract.Forum.Question.AddQuestionQueryModel
@{
    ViewData["Title"] = "پرسش سوال";
    Layout = "Shared/_Layout";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <div Class="row">
            <div class="col-lg-8">
                <div class="contact-form bg-secondary rounded p-5">
                    <div id="success"></div>
                    <form method="post" asp-page="Forum" asp-page-handler="Question" enctype="multipart/form-data" id="contactForm">
                      <input type="hidden" asp-for="CourseId" value="@Model.CourseId"/>
                        <div class="control-group">
                            <input type="text" asp-for="Title" class="form-control border-0 p-4" id="subject" placeholder="موضوع" required="required" data-validation-required-message="لطفا یک موضوعی را بنویسید" />
